# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec termite -e tmux
bindsym $mod+Shift+Return exec termite

# kill focused window
bindsym $mod+Shift+q kill

# lock screen
bindsym $mod+s --release exec slock

# volume control
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle

# screen brightness control
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# screenshot keys
bindsym $mod+Print exec maim -s --hidecursor ~/Pictures/Screenshots/screenshot-$(date +%Y-%m-%d-%H-%M-%S).png
bindsym $mod+ctrl+Print exec maim --hidecursor ~/Pictures/Screenshots/screenshot-$(date +%Y-%m-%d-%H-%M-%S).png

# start rofi run with "o" as in R[un]Ofi
bindsym $mod+o exec rofi -show run
# start rofi window with "i" as in roF[ind window]I
bindsym $mod+i exec rofi -show window

